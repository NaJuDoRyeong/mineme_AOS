<resources>

    <style name="Contour">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#EAEAEA</item>
    </style>

    <style name="basic_btn">
        <item name="android:textSize">17sp</item>
        <item name="android:background">@drawable/btn_shape</item>
        <item name="android:fontFamily">@font/cafe24_ssurround_air</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/bold_text_color</item>
    </style>

    <style name="ImageText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">23dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="fontFamily">@font/cafe24_ssurround_air</item>
        <item name="android:textColor">#191919</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="BasicText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="fontFamily">@font/cafe24_ssurround_air</item>
        <item name="android:textColor">@color/bold_text_color</item>
        <item name="android:paddingStart">@dimen/margin_normal</item>
        <item name="android:paddingEnd">@dimen/margin_normal</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="LabelText" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="fontFamily">@font/cafe24_ssurround_air</item>
        <item name="android:paddingStart">@dimen/margin_normal</item>
        <item name="android:paddingEnd">@dimen/margin_normal</item>
        <item name="android:textColor">@color/bold_text_color</item>
        <item name="android:textSize">12sp</item>
    </style>


</resources>