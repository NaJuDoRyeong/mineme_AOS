<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeFragment">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".fragment.HomeFragment">

            <ImageView
                android:id="@+id/home_profileIV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="48dp"
                android:src="@drawable/img_profile"
                app:layout_constraintEnd_toStartOf="@+id/home_heartIV"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/home_profileIV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:src="@drawable/img_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/home_heartIV"
                app:layout_constraintTop_toTopOf="@id/home_profileIV1" />

            <ImageView
                android:id="@+id/home_heartIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/img_heart"
                app:layout_constraintEnd_toStartOf="@+id/home_profileIV2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/home_profileIV1"
                app:layout_constraintTop_toBottomOf="@id/home_profileIV1" />

            <TextView
                android:id="@+id/home_profileNameTV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/cafe24_ssurround_air"
                android:text="가나다"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/home_profileIV1"
                app:layout_constraintStart_toStartOf="@+id/home_profileIV1"
                app:layout_constraintTop_toBottomOf="@id/home_profileIV1" />

            <TextView
                android:id="@+id/home_profileNameTV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cafe24_ssurround_air"
                android:text="가나다"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/home_profileIV2"
                app:layout_constraintStart_toStartOf="@+id/home_profileIV2"
                app:layout_constraintTop_toTopOf="@id/home_profileNameTV1" />

            <TextView
                android:id="@+id/home_profileExplanation1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/cafe24_ssurround_air"
                android:gravity="center"
                android:text="상대방의 설명을\n 입력해주세요!"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/home_profileNameTV1"
                app:layout_constraintStart_toStartOf="@id/home_profileNameTV1"
                app:layout_constraintTop_toBottomOf="@id/home_profileNameTV1" />


            <TextView
                android:id="@+id/home_profileExplanation2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/cafe24_ssurround_air"
                android:gravity="center"
                android:text="상대방의 설명을\n 입력해주세요!"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/home_profileNameTV2"
                app:layout_constraintStart_toStartOf="@id/home_profileNameTV2"
                app:layout_constraintTop_toBottomOf="@id/home_profileNameTV2" />


            <ImageView
                android:id="@+id/home_topLineIV"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="137dp"
                android:src="@drawable/img_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_profileNameTV1" />

            <TextView
                android:id="@+id/home_storyTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/cafe24_ssurround_air"
                android:text="No Story..."
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_topLineIV" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_todayStoryLO"
                android:layout_width="348dp"
                android:layout_height="348dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_storyTV">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_no_story" />

                <ImageView
                    android:id="@+id/home_addStoryIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="76.35dp"
                    android:src="@drawable/img_add_story"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/home_storyTV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/cafe24_ssurround_air"
                android:text="오늘의 스토리를 작성해주세요:)"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_todayStoryLO" />

            <ImageView
                android:id="@+id/home_bottomLineIV"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:src="@drawable/img_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_storyTV2" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:layout_marginBottom="108dp"
                android:src="@drawable/img_add_widget"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_bottomLineIV" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>
